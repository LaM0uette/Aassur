<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="Aassur.MainPage"
             xmlns:components="using:Aassur.Resources.Components">
    
    <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout.Resources>
            <system:Double x:Key="lineHeight">300</system:Double>
            <system:Double x:Key="iconSize">180</system:Double>
            <system:Double x:Key="borderWidth">2</system:Double>
            <system:Int32 x:Key="cornerRadius">15</system:Int32>
        </StackLayout.Resources>
        
        <Grid WidthRequest="1000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Clients -->      <!-- <components:SearchablePersonListView Grid.Column="0" /> -->
            <StackLayout Grid.Column="0" Orientation="Horizontal">
                <StackLayout Orientation="Vertical">
                
                </StackLayout>
                
                <!-- <ImageButton Source="database.png"
                              WidthRequest="{StaticResource lineHeight}"
                              HeightRequest="{StaticResource lineHeight}"
                              BackgroundColor="Transparent"
                              BorderColor="{StaticResource Secondary}"
                              BorderWidth="1"
                              HorizontalOptions="Center"
                              VerticalOptions="Center"
                              Aspect="AspectFill"/> -->
            </StackLayout>
            
            <!-- Map -->
            <Grid Grid.Column="1" 
                  WidthRequest="{StaticResource lineHeight}" 
                  HeightRequest="{StaticResource lineHeight}">
                
                <Frame BorderColor="{StaticResource Secondary}"
                       Padding="3"
                       CornerRadius="10"
                       HasShadow="True">
                    <Frame BackgroundColor="White"
                           Padding="0"
                           CornerRadius="10"
                           HasShadow="False">
                        <components:ContentButton BackgroundColor="Transparent"
                                                  WidthRequest="{StaticResource lineHeight}"
                                                  HeightRequest="{StaticResource lineHeight}">
                            <Image Source="map.png"
                                   WidthRequest="{StaticResource iconSize}"
                                   HeightRequest="{StaticResource iconSize}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Aspect="AspectFill"/>
                        </components:ContentButton>
                    </Frame>
                </Frame>
                
            </Grid>
        </Grid>
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Meetings -->
            <Button Grid.Column="0" Text="Button 1" />
            
            <!-- News -->
            <Button Grid.Column="1" Text="Button 2" />
            
            <!-- Settings -->
            <Button Grid.Column="2" Text="Button 3" />
        </Grid>
        
    </StackLayout>
    
</ContentPage>
